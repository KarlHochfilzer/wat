$('#<%= @user.id.to_s %>').slideUp(250);
if( $('#user-name').length == 0  ) {
  $('#<%= @user.id.to_s %>').after('<div class="well"><%= escape_javascript render( "users/short_header", user: @user) %></div>');
}

$('#authentication_providers').parent().addClass('active');
$('#profile-section').html('<%= j(render "auth_providers", user: @user) -%>');
$('#user-menu').html('<%= escape_javascript render "users/user_menu", user: @user %>');

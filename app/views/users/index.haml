%h1= title "Home / Userlist"

.container
  - @users.each_with_index do |user,idx|
    %div{:id => user.id.to_s}
      .well
        .row
          .span4
            %h2= user.name
            - user.facilities_string do |str|
              %p.label= str
            %ul
              - user.authentications.each do |auth|
                %li
                  = auth.provider.to_s.humanize
          .span2.offset4
            -if user == current_user
              %ul.nav.nav-stacked
                %li= button_link_to 'icon-edit', 'span3 btn btn-primary', t(:edit_your_record).html_safe, user
                %li= button_link_to 'icon-remove', 'span3 btn btn-danger', t(:cancel_account), user_path(user), :confirm => t(:are_you_sure), :method => :delete
            -elsif can_execute?('Admin')
              %ul.nav.nav-stacked
                %li{id:"#{user.id.to_s}-edit-button"}= button_link_to 'icon-cog', 'span3 btn', t(:edit_facilities), user_facilities_path(user)

    
    
    
    
  

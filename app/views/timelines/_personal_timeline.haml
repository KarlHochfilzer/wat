%h2=t(:personal_timeline)

=simple_form_for( current_user.timeline||current_user.build_timeline(name: current_user.name), url: update_user_timeline_timelines_path(current_user) ) do |f|
  .check-box-with-label
    =f.input :enabled, as: 'boolean', label: false
    =f.label :enabled, t(:enable_timeline_hint)
  .check-box-with-label
    =f.input :public,  as: 'boolean', label: false
    =f.label :public, t(:public_timeline_hint)
    =f.input :name
  =f.button :submit, t(:save), class: "btn btn-primary"

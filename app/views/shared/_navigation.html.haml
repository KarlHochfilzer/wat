%ul{class: "nav pull-right"}
  %li
    - if user_signed_in?  
      = link_to( t(:logout), signout_path)
    - else
      = link_to(t(:login), signin_path)
  - if current_user && current_user.can_execute?('Admin')
    %ul.nav
      %li.dropdown
        = link_to "Admin <b class='caret'></b>".html_safe, "#", :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'
        %ul.dropdown-menu
          %li= link_to(t(:userlist), users_path)
          %li= link_to(t(:pages), pages_path)


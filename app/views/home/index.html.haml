%h1= title "Home / Userlist"

- @users.each_with_index do |user,idx|
  .row.well
    .row.span12
      .span4
        %h2= user.name
        %ul
          - user.authentications.each do |auth|
            %li
              = auth.provider.to_s.humanize
      .span2.offset5
        -if user == current_user
          %ul.nav.nav-stacked
            %li.input-prepend{:class=> "nav btn btn-primary span2"}
              %i.icon-user
              %strong= link_to t(:edit_your_record).html_safe, user
            %li.input-prepend{:class=> "nav btn btn-danger span2"}
              %i.icon-remove
              %strong= link_to t(:cancel_account), user_path(user), :confirm => t(:are_you_sure), :method => :delete
    
    
    
    
    
  

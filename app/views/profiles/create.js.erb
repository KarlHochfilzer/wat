<% if @user.errors.any? %>
  $('#profile-section').html("<div class='alert alert-error'><%= @user.errors.full_messages %></div>"+
    "<%= escape_javascript(render( 'form', user: @user)) -%>");
<% else %>
  $('#profile-section').html( "<div class='alert alert-success'><i class='icon-ok-sign'></i> <%= t(:profile_successfully_updated) %></div>"+
    "<%= escape_javascript(render( 'profile', user: @user)) %>");
<% end %>
$('#user-menu').html('<%= escape_javascript render "users/user_menu", user: @user %>');
